<?xml version="1.0" encoding="ISO-8859-1"?>

<screensaver name="3d clock" _label="3d clock">

    <command arg="-root"/>

    <number _label="Twist:" _low-label="Low" id="twist" type="slider"
            default="1" arg="-move %" low="0" _high-label="High"
            high="3"/>

    <number _label="Twist speed:" _low-label="Slow" id="speed"
            type="slider" default="10" arg="-cycle %" low="5"
            _high-label="Fast" high="20"/>

    <number _label="Wobble:" _low-label="Low" id="wobble" type="slider"
            default="2" arg="-wobble %" low="0" _high-label="High"
            high="5"/>

    <number _label="Size:" _low-label="Small" id="size" type="slider"
            default="2" arg="-mag %" low="1" _high-label="Large"
            high="5"/>

</screensaver>
