<?xml version="1.0" encoding="ISO-8859-1"?>

<screensaver name="sierpinski" _label="Sierpinski">

    <command arg="-root"/>

    <number _label="Number of Colors" _low-label="Colors:" id="colors"
            type="spinbutton" default="64" arg="-ncolors %" low="1"
            high="256"/>

    <number _label="Speed of Motion" _low-label="Faster" id="cycles"
            type="slider" default="20" arg="-cycles %" low="1"
            _high-label="Slower" high="50"/>

    <boolean _label="Display screensaver in monochrome." arg-unset=""
             id="monochrome" test="mono" arg-set="-mono"/>

    <_description>This draws the two-dimensional variant of the recursive Sierpinski triangle fractal.  Written by Desmond Daignault.</_description>
</screensaver>