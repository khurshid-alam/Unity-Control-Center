<?xml version="1.0" encoding="ISO-8859-1"?>

<screensaver name="compass">
    <command arg="-root"/>
    <select id="use_db">
	<option id="db" _label="Use double buffering"/>
	<option id="nodb" _label="Don't use double bufferinge" arg-set="-no-db" test="no-db"/>
    </select>
    <number id="speed" _label="Speed" _low-label="Slow" _high-label="Fast" 
            type="slider" low="0" high="20000" default="10000" arg="-delay %" 
            from-cli-conv="20000 - var" to-cli-conv="20000 - var"/>
    <select id="use_color">
	<option id="color" _label="Full Color"/>
	<option id="mono" _label="Monochrome" arg-set="-mono" test="mono"/>
    </select>
</screensaver>
